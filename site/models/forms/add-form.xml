<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE xml>
<form
	addrulepath="administrator/components/com_dinning_philosophers/models/rules"
	>
	<fieldset
		name="details"
		label="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_DETAILS"
		>
		<field
			name="id"
			type="hidden"
			/>
		<field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
			size="40"
			/>
		<field
			name="catid"
			type="category"
			extension="com_dinning_philosophers"
			class="inbox"
			default=""
			label="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_FIELD_CATID_LABEL"
			required="true"
			>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
		<fields name="imageinfo" 
			label="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_IMAGE_LABEL">
			<field
				name="image"
				type="file"
				label="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_PICTURE_DESC"
				accept="image/*"
				>
			</field>
			<field
				name="alt"
				type="text"
				label="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_ALTTEXT_LABEL"
				description="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_MESSAGE_DESC"
				hint="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_MESSAGE_HINT"
				required="true"
				>
			</field>
		</fields>
		<field
			name="message"
			type="textarea"
			rows="5"
			cols="80"
			label="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_MESSAGE_LABEL"
			description="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_MESSEAGE_DESC"
			hint="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_MESSAGE_HINT"
			required="true"
			>
		</field>
		<field
			name="captcha"
			type="captcha"
			label="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_FIELD_CAPTCHA_LABEL"
			description="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_FIELD_CAPTCHA_DESC"
			validate="captcha"
			>
		</field>
		<fields name="params">
			<field
				name="show_category"
				type="list"
				label="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_FIELD_SHOW_CATEGORY_LABEL"
				description="COM_DINNING_PHILOSOPHERS_DINNING_PHILOSOPHERS_FIELD_SHOW_CATEGORY_DESC"
				default=""
				useglobal="true"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fields>
	</fieldset>
</form>
